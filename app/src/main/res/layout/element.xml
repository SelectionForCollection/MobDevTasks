<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/el_name"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/el_price"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toEndOf="@id/el_name"
        android:layout_marginStart="20dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/el_description"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_height="30dp"
        android:layout_below="@id/el_name" />

    <TextView
        android:id="@+id/el_markCode"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/el_price"
        android:layout_toEndOf="@id/el_description"
        android:layout_marginStart="20dp" />

