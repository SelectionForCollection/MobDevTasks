<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <CheckedTextView
        android:id="@android:id/text1"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeightSmall"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:gravity="center_vertical"
        android:paddingStart="?android:attr/listPreferredItemPaddingStart"
        android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
        android:textAppearance="?android:attr/textAppearanceListItemSmall" />

    <TextView
        android:id="@+id/el_name"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/el_price"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toEndOf="@id/el_name"
        android:layout_marginStart="20dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/el_description"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_height="30dp"
        android:layout_below="@id/el_name" />

    <TextView
        android:id="@+id/el_markCode"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/el_price"
        android:layout_toEndOf="@id/el_description"
        android:layout_marginStart="20dp" />

    <CheckBox
        android:id="@+id/el_checkBox"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
